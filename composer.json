{
    "name": "jlourenco/base",
    "type": "library",
    "description": "This is the basic module for my ready to deploy website structure",
    "keywords": [
        "jlourenco",
        "base"
    ],
    "homepage": "https://github.com/jlourenco/base",
    "license": "MIT",
    "authors": [
        {
            "name": "Joao Lourenco",
            "email": "jglourenco.pt@gmail.com",
            "homepage": "http://joaolourenco.net/",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "4.*",
        "scrutinizer/ocular": "~1.1",
        "squizlabs/php_codesniffer": "~2.3"
    },
    "autoload": {
        "psr-4": {
            "jlourenco\\base\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "jlourenco\\base\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
